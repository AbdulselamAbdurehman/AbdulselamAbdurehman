---
const skills = {
  Backend: [
    "Java (Spring Boot)",
    "Node.js (NestJS)",
    "Go (Gin/gRPC)",
    "Python (Django/FastAPI)",
    "Microservices",
    "REST/gRPC",
  ],
  Frontend: ["React", "Next.js", "Astro", "TypeScript", "TailwindCSS"],
  Database: ["PostgreSQL", "MongoDB", "Redis", "VectorDB"],
  DevOps: ["Docker", "Kubernetes", "CI/CD", "AWS/GCP", "Linux"],
  "Concepts & Tools": [
    "System Design",
    "Algorithms",
    "Git",
    "Kafka/RabbitMQ",
    "OAuth 2.0",
  ],
};
---

<section id="skills" class="py-20">
  <h2 class="text-3xl md:text-4xl font-bold mb-12 flex items-center gap-4">
    <span class="text-blue-500">03.</span> Core Competencies
  </h2>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    {
      Object.entries(skills).map(([category, items]) => (
        <div class="bg-slate-900/30 border border-slate-800 p-6 rounded-lg hover:bg-slate-800/30 transition-colors duration-300">
          <h3 class="text-blue-400 font-bold mb-4 tracking-wide uppercase text-sm">
            {category}
          </h3>
          <ul class="space-y-2">
            {items.map((item) => (
              <li class="flex items-center gap-2 text-slate-400 text-sm hover:text-slate-200 transition-colors">
                <span class="text-blue-500/50">â–¹</span> {item}
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>
